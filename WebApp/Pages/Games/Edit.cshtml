@page
@model WebApp.Pages_Games.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>SaveGame</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SaveGame.Id" />
            <div class="form-group">
                
                <label asp-for="SaveGame.Name" class="control-label"></label>
                <input asp-for="SaveGame.Name" class="form-control" />
                <span asp-validation-for="SaveGame.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="SaveGame.CreatedAtDateTime" class="control-label"></label>
                <input asp-for="SaveGame.CreatedAtDateTime" class="form-control" />
                <span asp-validation-for="SaveGame.CreatedAtDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="SaveGame.State" class="control-label"></label>
                <input asp-for="SaveGame.State" class="form-control" />
                <span asp-validation-for="SaveGame.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="SaveGame.ConfigurationId" class="control-label"></label>
                <select asp-for="SaveGame.ConfigurationId" class="form-control" asp-items="ViewBag.ConfigurationId"></select>
                <span asp-validation-for="SaveGame.ConfigurationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
