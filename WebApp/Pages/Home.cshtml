@page
@model WebApp.Pages.Home

<link rel="stylesheet" href="~/css/site.css" />

<div class="main-page-container">
    <h1>Welcome, @Model.UserName!</h1>
</div>


<div class="container">
    <div class="second-page-container">
        <div class="text-center">
            <div class="row">
                <div class="col-md-12">
                    <h2>Your Games</h2>
                    <form method="post">
                        <input type="hidden" name="userName" value="@Model.UserName"/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="GameName" class="control-label">Select game</label>
                            <select asp-for="GameName" class="form-select" asp-items="Model.GameSelectList"></select>
                            <span asp-validation-for="GameName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Play" class="btn btn-primary"/>
                        </div>
                    </form>
                    <div class="form-group mt-3">
                        <a asp-page="./CreateGame" asp-route-UserName="@Model.UserName" class="btn btn-success">Create a new game</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
